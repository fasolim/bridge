# Local example .env for mcp-bridge
# Copy this to .env and fill the secrets locally (do NOT commit .env to git)

# Bridge server
MCP_PORT=4000

# Cursor MCP WebSocket URL (if you have a running Cursor MCP)
# Example: ws://localhost:3001 or wss://cursor.myhost.com:443
CURSOR_MCP_WS=ws://localhost:3001

# Notion: integration token (internal integration secret)
# Create an integration in Notion and paste its "internal integration token" here
NOTION_API_KEY=notion_internal_token_here

# Notion: database id to query for bugs (can be the database page id)
NOTION_DATABASE_ID=your_notion_database_id_here

# Optional: GitHub token if you want real commits via GitHub API
GITHUB_TOKEN=ghp_your_token_here

# Toggle to use real APIs or run in dry/simulated mode
USE_REAL_API=false

# Local repo path (if using local repository mode)
LOCAL_REPO_PATH=C:\caminho\para\seu\repositorio

# Optional runtime flags
AUTO_COMMIT=false
AUTO_PUSH=false
DRY_RUN=false
